# JWT Secret (generate a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# API Keys
# CoinGecko API Key (optional - free tier works without key but has rate limits)
COINGECKO_API_KEY=your-coingecko-api-key

# Molaris/Moralis API Key (supports both spellings)
MOLARIS_API_KEY=your-molaris-api-key
# OR use MORALIS_API_KEY (both work)
# MORALIS_API_KEY=your-moralis-api-key
MOLARIS_BASE_URL=https://api.molaris.io

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_CHAIN_ID=1

# Encryption Key (for session storage)
ENCRYPTION_KEY=your-32-byte-encryption-key

# Database (optional - if using MongoDB)
# MONGODB_URI=your-mongodb-connection-string
